#!/usr/bin/env bash

env EXTRA_CMAKE_ARGS="-DPATH_TO_LLVM_ROOT=$clang"\
    PATH=/inf10xl_user1/third-party/go/bin:${PATH} \
    python3 ./install.py --clang-completer \
                         --system-libclang \
                         --go-completer \
                         --quiet \
                         --java-completer \
                         --yaml-completer \
                         --json-completer \
                         "$@"
cd ./third_party/ycmd/third_party/tern_runtime
npm install --production
